Description=oVirt Link Layer Discovry Protocol labeler service
After=multi-user.target

[Service]
Type=idle
ExecStart=/usr/bin/@PYTHON_EXECUTABLE@ /usr/share/ovirt-lldp-labeler/ovirt_lldp_labeler_cli.py
[Install]
WantedBy=multi-user.target
